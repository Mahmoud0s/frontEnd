<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="assets/images/Portsaid University.svg" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <link rel="stylesheet" href="../style/main.css">

    <title>Dashboard</title>
</head>

<body>
    <div class="pop-up" id="create-popUp">
        <div class="close_btn">
            <i class="fa-solid fa-xmark"></i>
        </div>
        <div class="popup-content">
            <h2>create new work Section</h2>
            <form>
                <div>
                    <h4>work section name</h4>
                    <input type="text" name="workSectionName">
                </div>
                <div class="message"></div>
                <div>
                    <input type="submit" id="Btn" value="send">
                </div>
            </form>
        </div>
    </div>
    <div class="pop-up" id="update-popUp">
        <div class="close_btn">
            <i class="fa-solid fa-xmark"></i>
        </div>
        <div class="popup-content">
            <h2>update workSection</h2>
            <form id="updateForm">
                <div>
                    <h4>ID</h4>
                    <input type="text" name="ID">
                </div>
                <div>
                    <h4>work section name</h4>
                    <input type="text" name="name">
                </div>
                <div class="message"></div>
                <input type="submit" id="Btn" value="send">
        </div>
    </div>
    <div class="pop-up" id="delete-popUp">
        <div class="close_btn">
            <i class="fa-solid fa-xmark"></i>
        </div>
        <div class="popup-content">
            <h2>Delete work Section</h2>
            <h3 id="msgwarning"></h3>
            <div class="message"></div>
            <div>
                <input type="button" value="confirm">
            </div>
        </div>
    </div>
    <nav>
        <div class="navContent">
            <button id="menu-btn">
                <span class="material-icons-sharp">
                    menu
                </span>
            </button>
            <div class="dark-mode">
                <span class="material-icons-sharp active">
                    light_mode
                </span>
                <span class="material-icons-sharp">
                    dark_mode
                </span>
            </div>

            <div class="profile">
                <div class="info">
                    welcome back <h4 id="user-name"></h4>
                </div>
                <div class="profile-photo">
                    <i class="fa-regular fa-user"></i>
                </div>
            </div>

        </div>
    </nav>
    <div class="container">
        <aside>
            <div class="toggle">
                <div class="logo">
                    <img src="/assets/images/Portsaid University.svg">
                    <h2>Admin<span class="danger"></span></h2>
                </div>
                <div class="close" id="close-btn">
                    <span class="material-icons-sharp">
                        close
                    </span>
                </div>
            </div>

            <div class="sidebar">
                <div class="files">
                    <div class="userInfo">
                        <div class="profile-photo">
                            <i class="fa-regular fa-user"></i>
                        </div>
                        <div class="info">
                            user : <h4 class="user-name"></h4>
                        </div>
                    </div>
                    <a href="/home">
                        <i class="fa-solid fa-house"></i>
                        <h3>Home</h3>
                    </a>
                    <a href="/adminDashBoard/" >
                        <span class="material-icons-sharp">
                            person_outline
                        </span>
                        <h3>Users</h3>
                    </a>
                    <a href="/adminDashBoard/workSection" class="active">
                        <span class="material-icons-sharp">
                            receipt_long
                        </span>
                        <h3>Work Section</h3>
                    </a>
                    <a href="/adminDashBoard/hall">
                        <span>
                            <i class="fa-solid fa-table"></i>
                        </span>
                        <h3>Halls</h3>
                    </a>
                    <a href="/aboutUs" class="" >
                        <i class="fa-solid fa-people-group"></i>
                        <h3>about us</h3>
                    </a>
                </div>
                <div class="loginDiv">
                    <a href="/login" id="logout">
                        <span class="material-icons-sharp">
                            logout
                        </span>
                        <h3>Logout</h3>
                    </a>
                </div>
            </div>
        </aside>
        <main>
            <!-- start Analytics -->
            <h1>Analytics</h1>
            <div class="analyse">
                <div class="sales">
                    <div class="status">
                        <div class="info">
                            <h3>all Users</h3>
                            <h1 id="userNum"></h1>
                        </div>
                        <div class="analtyic-icon">
                            <i class="fa-solid fa-users"></i>
                        </div>
                    </div>
                </div>
                <div class="searches">
                    <div class="status">
                        <div class="info">
                            <h3>Regular User</h3>
                            <h1 id="regUsrNum"></h1>
                        </div>
                        <div class="analtyic-icon">
                            <i class="fa-solid fa-user"></i>
                        </div>
                    </div>
                </div>
                <div class="administrator">
                    <div class="status">
                        <div class="info">
                            <h3>Admin</h3>
                            <h1 id="AdminNum"></h1>
                        </div>
                        <div class="analtyic-icon">
                            <i class="fa-solid fa-user-tie"></i>
                        </div>
                    </div>
                </div>
                <div class="visits">
                    <div class="status">
                        <div class="info">
                            <h3>Documents</h3>
                            <h1 id="docNum">24,981</h1>
                        </div>
                        <div class="analtyic-icon">
                            <i class="fa-solid fa-file"></i>
                        </div>
                    </div>
                </div>
                <div class="work-b">
                    <div class="status">
                        <div class="info">
                            <h3>Work Section</h3>
                            <h1 id="workSectionNum"></h1>
                        </div>
                        <div class="analtyic-icon">
                            <i class="fa-solid fa-house-user"></i>
                        </div>
                    </div>
                </div>
                <div class="halls">
                    <div class="status">
                        <div class="info">
                            <h3>Halls</h3>
                            <h1 id="hallsNum"></h1>
                        </div>
                        <div class="analtyic-icon">
                            <i class="fa-solid fa-building"></i>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end Analytics -->

            <div class="new-section">
                <h2>New workSection</h2>
                <div class="section-list">
                    <div class="user">
                        <i class="fa-solid fa-plus"></i>
                    </div>
                </div>
            </div>
            <!-- End of New Users Section -->

            <!-- Recent Orders Table -->

            <!-- End of Recent Orders -->

        </main>
        <!-- End of Main Content -->

        <!-- Right Section -->
        <div class="right-section">

            <div class="user-profile">
                <div class="logo">
                    <img src="/assets/images/Portsaid University.svg">
                    <div>
                        <h2>Port Said University</h2>
                        <p>Faculty Of Science</p>
                    </div>
                </div>
            </div>

        </div>
        <div class="add-user">
            <h2>workSections</h2>
            <div class="content"></div>
        </div>

    </div>
    <script src="/script/utils/jwt-decode.min.js"></script>  
    <script src="/script/utils/js.cookie.min.js"></script>
    <script src="/script/pages/dashBoard/index.js"></script>
    <script type="module" src="/script/pages/dashBoard/workSection.js"></script>
</body>

</html>